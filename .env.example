# ============================================================================
# Backend Configuration
# ============================================================================

# Backend server port
# Default: 8001
PORT=8001

# Enable automatic port fallback if PORT is already in use
# Set to "true" to auto-increment port, "false" to fail if port is busy
# Default: false
PORT_AUTO=false

# Node environment (development, production, test)
NODE_ENV=development

# ============================================================================
# Frontend Configuration (Vite)
# ============================================================================

# Base URL for backend API calls
# In development, this should match the backend PORT
VITE_API_BASE=http://localhost:8001

# Base URL for WebSocket connections
# In development, this should match the backend PORT
VITE_WS_BASE=ws://localhost:8001

# ============================================================================
# Data Providers & External APIs (Optional)
# ============================================================================

# CoinMarketCap API Key
# Get yours at: https://coinmarketcap.com/api/
CMC_API_KEY=

# CryptoCompare API Key
# Get yours at: https://min-api.cryptocompare.com/
CRYPTOCOMPARE_KEY=

# NewsAPI Key
# Get yours at: https://newsapi.org/
NEWSAPI_KEY=

# Blockchain explorers (optional)
ETHERSCAN_API_KEY=
BSCSCAN_API_KEY=
TRONSCAN_API_KEY=

# Hugging Face API for ML/sentiment analysis
# Get yours at: https://huggingface.co/settings/tokens
# See docs/HUGGINGFACE_SETUP.md for setup guide
HUGGINGFACE_API_KEY=

# ============================================================================
# Trading Configuration (Optional)
# ============================================================================

# Enable futures trading features
FEATURE_FUTURES=false

# Enable KuCoin integration
EXCHANGE_KUCOIN=true

# KuCoin Futures API Credentials
# Get from: https://www.kucoin.com/account/api
KUCOIN_FUTURES_KEY=
KUCOIN_FUTURES_SECRET=
KUCOIN_FUTURES_PASSPHRASE=

# ============================================================================
# Caching & Performance (Optional)
# ============================================================================

# Disable Redis caching (set to "true" to use in-memory cache only)
DISABLE_REDIS=true

# Redis connection settings (only used if DISABLE_REDIS=false)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# Notifications (Optional)
# ============================================================================

# Telegram bot for signal notifications
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ============================================================================
# Network & Proxy (Optional)
# ============================================================================

# HTTP/HTTPS proxy (optional, for Binance API if needed)
# Only enable if you need to route Binance requests through a proxy
HTTP_PROXY=
HTTPS_PROXY=

# Enable global proxy specifically for Binance
# Default: false (uses backend proxy routes instead)
USE_GLOBAL_PROXY_FOR_BINANCE=false

# Default User-Agent for external API calls
DEFAULT_UA=DreammakerCrypto/1.0

# ============================================================================
# Development & Debugging (Optional)
# ============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable verbose logging
DEBUG=false
